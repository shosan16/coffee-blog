{
  "name": "coffee-blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:check": "next lint --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type:check": "tsc --noEmit",
    "quality:check": "npm run lint:check && npm run format:check && npm run type:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "quality:report": "npm run lint -- --format json --output-file eslint-report.json",
    "test": "vitest",
    "test:ui": "npx vitest --ui",
    "test:coverage": "npx vitest run --coverage",
    "validate": "npm run quality:check && npm run test",
    "ci": "npm run validate && npm run build",
    "check-all": "npm run format && npm run lint && npm run type:check && npm run test",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate deploy",
    "db:migrate:local": "DATABASE_URL=\"postgresql://user:password@localhost:5432/db?schema=public\" npx prisma migrate deploy",
    "db:migrate:docker": "docker compose exec app-dev npm run db:migrate",
    "db:seed": "npx tsx src/db/seed.ts",
    "db:seed:local": "DATABASE_URL=\"postgresql://user:password@localhost:5432/db?schema=public\" npx tsx src/db/seed.ts",
    "db:seed:docker": "docker compose exec app-dev npm run db:seed",
    "db:setup": "npm run db:generate && npm run db:migrate:docker && npm run db:seed:docker",
    "db:studio": "npx prisma studio",
    "prepare": "husky"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "@prisma/extension-accelerate": "^1.3.0",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.0",
    "@types/lodash": "^4.17.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.479.0",
    "next": "^15.3.3",
    "next-swagger-doc": "^0.4.1",
    "next-themes": "^0.4.6",
    "pino": "^9.7.0",
    "prisma": "^6.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "sonner": "^2.0.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-react": "^5.25.3",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.7.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.2.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.4.3",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "prisma": {
    "schema": "src/db/schema.prisma",
    "seed": "npx tsx src/db/seed.ts"
  }
}
